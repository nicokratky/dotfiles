    "gh"
    "git"
    "git-crypt"
    "git-lfs"
    "gnupg"
    "grep"
    "htop"
    "imagemagick"
    "isort"
    "jq"
    "k9s"
    "koekeishiya/formulae/skhd"
    "koekeishiya/formulae/yabai"
    "kubectl"
    "make"
