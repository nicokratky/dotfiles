    "mactex-no-gui"
    "rectangle"
    "skim"
    "spotify"
    "visual-studio-code"
    "vlc"
}}

{{ if not .work }}
{{ $casks = concat $casks (list
    "adobe-creative-cloud"
    "grandperspective"
    "jetbrains-toolbox"
    "mattermost"
    "nextcloud"
    "whatsapp"
) }}
{{ end }}

brew bundle --no-lock --file=/dev/stdin <<EOF
{{ range ($brews | sortAlpha | uniq) -}}
brew "{{ . }}"
{{ end -}}
{{ range ($casks | sortAlpha | uniq) -}}
cask "{{ . }}"
{{ end -}}
EOF
{{ end -}}
