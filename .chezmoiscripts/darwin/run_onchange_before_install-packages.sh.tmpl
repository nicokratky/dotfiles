    "zsh"
}}

{{ if .work }}
{{ $brews = concat $brews (list
    "awscli"
    "awsume"
    "kubectx"
    "terraform"
    "terraform-docs"
    "tflint"
    "tfsec"
    "warrensbox/tap/tfswitch"
) }}
{{ end }}

{{ $casks := list
    "1password"
    "1password-cli"
    "appcleaner"
    "alacritty"
    "discord"
    "docker"
    "eloston-chromium"
    "firefox"
    "font-hack"
    "font-hack-nerd-font"
